<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/gl"
        android:src="@drawable/select" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gl"
        android:layout_centerHorizontal="true"
        android:id="@+id/sel"
        android:onClick="selImage1"
        android:layout_marginTop="10dp"
        android:text="Select Display Picture" />


    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Select A Username"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/t"
        android:hint="Username"
        android:textColor="#000000"
        android:inputType="text"
        android:textColorHint="#b7b7b7" />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Continue" android:layout_below="@+id/e" android:layout_centerHorizontal="true" android:onClick="con" />


</RelativeLayout>
